<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.lanthanh.admin.icareapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".presentation.application.iCareApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.lanthanh.admin.icareapp.presentation.homepage.MainActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.lanthanh.admin.icareapp.presentation.splashscreen.DeepLinkActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="icare"/>
            </intent-filter>
        </activity>

        <activity android:name="com.lanthanh.admin.icareapp.presentation.bookingpage.BookingActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity android:name=".presentation.signupinfopage.UserInfoActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity android:name="com.lanthanh.admin.icareapp.presentation.bookingpage.ConfirmBookingActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name="com.lanthanh.admin.icareapp.presentation.resetpasswordpage.ResetPasswordActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>

        <activity android:name="com.lanthanh.admin.icareapp.presentation.userdetailpage.UserDetailsActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

    </application>
</manifest>