<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetpw_email_noti"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/resetpw_username_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            app:errorTextAppearance="@style/ErrorAppearance">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/resetpw_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/ic_person_white_36dp"
                android:drawablePadding="5dp"
                android:textColor="@color/colorWhite"
                android:hint="@string/username_input_hint" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/resetpw_email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            app:errorTextAppearance="@style/ErrorAppearance"
            android:layout_marginBottom="18dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/resetpw_email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_local_post_office_white_36dp"
                android:textColor="@color/colorWhite"
                android:drawablePadding="5dp"
                android:hint="@string/email_hint"
                android:ems="10"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/resetpw_send_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:background="@drawable/button_style"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:text="@string/resetpw_send_mail_button"/>

    </LinearLayout>
</ScrollView>