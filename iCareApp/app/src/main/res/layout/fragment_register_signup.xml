<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp">

            <!-- Username Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/su_username_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginBottom="8dp"
                app:errorTextAppearance="@style/ErrorAppearance">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/su_username_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_person_white_36dp"
                    android:drawablePadding="5dp"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/username_input_hint" />
            </android.support.design.widget.TextInputLayout>

            <!-- Password Label -->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/su_password_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:errorTextAppearance="@style/ErrorAppearance">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/su_password_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_lock_white_36dp"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/password_input_hint"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/su_password_confirm_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                app:passwordToggleEnabled="false"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:errorTextAppearance="@style/ErrorAppearance">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/su_password_confirm_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_security_white_36dp"
                    android:drawablePadding="5dp"
                    android:inputType="textPassword"
                    android:textColor="@color/colorWhite"
                    android:hint="@string/password_confirm_hint"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/su_sign_up_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/button_style"
                android:textColor="@drawable/button_text_style"
                android:layout_gravity="bottom"
                android:padding="12dp"
                android:textSize="18sp"
                android:text="@string/sign_up_button"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>