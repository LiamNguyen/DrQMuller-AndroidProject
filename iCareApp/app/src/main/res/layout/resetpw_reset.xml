<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/resetpw_back_button"
            android:layout_width="40dp"
            app:srcCompat="@drawable/ic_back_button"
            android:layout_alignParentTop="true"
            android:elevation="0dp"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:layout_height="40dp" />

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/resetpw_password_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resetpw_password_confirm_container"
            app:passwordToggleEnabled="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/resetpw_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:hint="@string/password_input_hint"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/resetpw_password_confirm_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/resetpw_reset_button"
            app:passwordToggleEnabled="false"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/resetpw_password_confirm_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_pw_confirm"
                android:drawablePadding="5dp"
                android:inputType="textPassword"
                android:hint="@string/password_confirm_hint"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/resetpw_reset_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="170dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="12dp"
            android:text="@string/resetpw_reset_pw_button"/>

    </RelativeLayout>
</ScrollView>
