<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="24dp">

        <!-- SELECT COUNTRIES -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">
            <Spinner
                android:id="@+id/spinner_countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:spinnerMode="dropdown"/>

            <View
                android:layout_toStartOf="@+id/drop_down_icon_countries"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>


            <ImageView
                android:id="@+id/drop_down_icon_countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2" />
        </RelativeLayout>

        <!-- SELECT CITIES -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">

            <Spinner
                android:id="@+id/spinner_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown"/>

            <View
                android:layout_toStartOf="@+id/drop_down_icon_cities"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>

            <ImageView
                android:id="@+id/drop_down_icon_cities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2" />

        </RelativeLayout>

        <!-- SELECT DISTRICTS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">

            <Spinner
                android:id="@+id/spinner_districts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_toStartOf="@+id/drop_down_icon_districts"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>

            <ImageView
                android:id="@+id/drop_down_icon_districts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2" />

        </RelativeLayout>

        <!-- SELECT LOCATIONS -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">

            <Spinner
                android:id="@+id/spinner_locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_toStartOf="@+id/drop_down_icon_locations"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>

            <ImageView
                android:id="@+id/drop_down_icon_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2"/>
        </RelativeLayout>

        <!-- SELECT VOUCHER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">

            <Spinner
                android:id="@+id/spinner_vouchers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_toStartOf="@+id/drop_down_icon_vouchers"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>

            <ImageView
                android:id="@+id/drop_down_icon_vouchers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2"/>

        </RelativeLayout>

        <!-- SELECT BOOKING TYPE -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.12"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_border">

            <Spinner
                android:id="@+id/spinner_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:spinnerMode="dropdown" />

            <View
                android:layout_toStartOf="@+id/drop_down_icon_booking_type"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorDarkGray"/>

            <ImageView
                android:id="@+id/drop_down_icon_booking_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_drop_down2"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/booking_startdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="date"
                android:enabled="false"
                android:focusable="false"
                android:text="@string/booking_start_date"/>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/booking_enddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="date"
                android:enabled="false"
                android:focusable="false"
                android:text="@string/booking_end_date"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/booking_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_style"
            android:textSize="18sp"
            android:text="@string/next_button"/>

    </LinearLayout>
</ScrollView>