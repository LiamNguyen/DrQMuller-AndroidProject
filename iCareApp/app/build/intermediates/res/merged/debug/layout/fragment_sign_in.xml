<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/si_back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_chevron_left_black_24dp"
        android:elevation="0dp"
        android:background="@android:color/background_light"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY" />

    <EditText
        android:id="@+id/si_login_id_input"
        android:background="@drawable/edit_text_style"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:hint="@string/username_input_hint"
        android:ems="10"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:drawablePadding="5dp"
        android:padding="2dp"
        android:elevation="4dp"
        android:layout_marginTop="173dp"
        android:layout_below="@+id/si_back_button"
        android:layout_alignStart="@+id/si_password_input" />

    <EditText
        android:id="@+id/si_password_input"
        android:background="@drawable/edit_text_style"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:hint="@string/password_input_hint"
        android:ems="10"
        android:drawableStart="@drawable/ic_vpn_key_black_24dp"
        android:drawablePadding="5dp"
        android:padding="2dp"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:layout_below="@+id/si_password_input"
        android:layout_marginTop="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/si_sign_in_button"
            android:text="@string/sign_in_button"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:background="@drawable/rounded_corner_button"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:elevation="6dp" />
    </LinearLayout>

</RelativeLayout>